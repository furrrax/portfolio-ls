script(type="text/x-template")#skills-list
    .skills-widget
        ul.user-skills
            li.user-skills__item(v-for="skill in skills")
                skills-row(
                    :skill="skill"
                )
            

script(type="text/x-template")#skills-row
    .skills-row
        h3.skills-row__title.title {{skill.skillsGroup}}
        ul.skills-row__list
            li.skills-row__item(v-for="(skillPercent, skillName) in skill.skills")
                skill(
                    :skillName="skillName"
                    :skillPercent="skillPercent"
                )

script(type="text/x-template")#skill
    .skill
        svg(viewBox="0 0 100 100").skill__circle-shape
            circle(cx="50" cy="50" r="40").skill__circle.skill__circle--under
            circle(cx="50" cy="50" r="40" ref="color-circle" stroke="url(#gradient)" transform='rotate(180 50 50)').skill__circle.skill__circle--above
            linearGradient(id="gradient" x1="0%" y1="0%" x2="100%" y2="0%")
                stop(offset="0%" stop-color="#d47e1d")
                stop(offset="100%" stop-color="#d98f21")
        .skill__title.title {{skillName}}