section.contact
    +image('content/comments/leaf/2.png', 'contact__leaf contact__leaf--up', 'картинка с листочком')
    +image('content/comments/leaf/1.png', 'contact__leaf contact__leaf--down', 'картинка с листочком')
    .contact__container.container
        .contact__title.title Связаться со мной
        form.contact__form
            .contact__row.contact__row-userdata
                label.contact__label.contact__label--name
                    .contact__wrap
                        span.contact__subtitle Введите ваше имя
                        input.contact__input.contact__input--name(type="text" name="name" placeholder="Вязовой Виталий" required)
                label.contact__label.contact__label--email
                    .contact__wrap
                        span.contact__subtitle Введите ваш email
                        input.contact__input.contact__input--email(type="text" name="email" placeholder="cjuiceone@gmail.com" required)
            .contact__row.contact__row-message
                label.contact__label.contact__label--message
                    .contact__wrap
                        span.contact__subtitle Сообщение к письму
                        textarea.contact__input.contact__input--message(name="message" placeholder="Требуется ваша помощь в создании сайта. Интересуют сроки и цена вопроса" required)
            .contact__row.contact__row-button
                a.contact__button(href="#") Отправить