mixin icon(name, className)
  - var icon = require(`images/icons/${name}.svg`);
  svg(class=className viewBox=icon.viewBox preserveAspectRatio="none")
    use(xlink:href=icon.url)

mixin image(path, className, description, attrRole)
  if role
    img(src=require(`images/${path}`) class=className role=attrRole)
  else
    img(src=require(`images/${path}`) class=className alt=description)

mixin socials(listClassName, itemClassName, iconAreaClassName, iconClassName, ...items)
      ul(class=listClassName)
          each item in items
              li(class=itemClassName)
                  a(href="#")(class=iconAreaClassName)
                      +icon(item, iconClassName)

mixin nav(navClassName, listClassName, itemClassName, linkClassName)
      nav(class=navClassName)
          - var menu = ['Главная', 'Обо мне', 'Навыки', 'Работы', 'Отзывы', 'Связаться']
          ul(class=listClassName)
              each item in menu
                  li(class=itemClassName)
                      a(href="#")(class=linkClassName) #{item}