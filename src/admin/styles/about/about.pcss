.about {
    position: relative;
}

.about-bg {
    position: absolute;
    background-size: cover;
    width: 100%;
    z-index: -20;
    filter: grayscale(100%) brightness(2.5);
}

.header-container {
    padding: 60px 0;
    display: flex;
    align-items: center;
    z-index: 5;
}

.header-title {
    font-family: 'Open Sans', sans-serif;
    font-weight: 700;
    font-size: 21px;
    color: #414c63;
}

.add-btn-header {
    display: flex;
    background-color: transparent;
    margin-left: 60px;
}

.add-btn {
    position: relative;
    width: 20px;
    height: 20px;
    border-radius: 50%;
    background: linear-gradient(90deg,#195be3,#3f35cb);
    flex-shrink: 0;
    &-skill {
        width: 40px;
        height: 40px;
    }
    &::before {
        content: '';
        position: absolute;
        width: 8px;
        height: 2px;
        background-color: #fff;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
    }
    &::after {
        content: '';
        position: absolute;
        width: 2px;
        height: 8px;
        background-color: #fff;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
    }
}

.add-btn-desc {
    font-family: 'Open Sans', sans-serif;
    font-weight: 600;
    font-size: 16px;
    color: #383bcf;
    margin-left: 13px;
}

.groups-container {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
}

.add, .group {
    position: relative;
    padding: 30px;
    padding-bottom: 35px;
    width: 48%;
    //min-height: 385px;
    background-color: #fff;
    box-shadow: 8px 8px 10px 0px rgba(0,0,0,0.16);
    margin-bottom: 30px;
}

.group-wrapper {
    display: flex;
    flex-direction: column;
}

.new-group, .edit-group {
    display: flex;
    justify-content: space-between;
    padding-bottom: 15px;
    padding-left: 10px;
    padding-right: 10px;
    border-bottom: 1px solid #dedee0;
}

.new-group-name, .edit-group-name {
    position: relative;
    &::before {
        position: absolute;
        content: "";
        top: 120%;
        left: 0;
        transform: translateY(-50%);
        border-bottom: 1px solid #000;
        width: 115%;
    }
}

.new-group-name-item, .group-name-item-active {
    position: relative;
    font-family: 'Open Sans', sans-serif;
    font-weight: 600;
    font-size: 16px;
    color: #414c63;
    outline: transparent;

    &::-webkit-input-placeholder {
        color: #9ea4af;
    }
    &::-moz-placeholder {
        color: #9ea4af;
    }    
}

.btn-confirm {
    width: 15px;
    height: 15px;
    background: svg-load('tick.svg', fill=#00d70a, width=15px, height=15px) center center no-repeat;
}

.btn-cancel {
    margin-left: 10px;
    width: 15px;
    height: 15px;
    background: svg-load('cross.svg', fill=#bf2929, width=15px, height=15px) center center no-repeat;
}

.new-skills {
    position: absolute;
    bottom: 30px;
    right: 30px;
}

.add-skill {
    display: flex;
    justify-content: flex-end;
    align-items: center;
}

.add-new-skill {
    width: 200px;
    position: relative;
    padding-left: 20px;
    &::before {
        position: absolute;
        content: "";
        top: 120%;
        left: 0;
        transform: translateY(-50%);
        border-bottom: 1px solid #000;
        width: 100%;
    }
    &-item {
        width: 100%;
        position: relative;
        font-family: 'Open Sans', sans-serif;
        font-weight: 400;
        font-size: 16px;
        color: #414c63;
        outline: transparent;
        &::-webkit-input-placeholder {
            color: #9ea4af;
        }
        &::-moz-placeholder {
            color: #9ea4af;
        }  
    }
}

.add-new-percent, .edit-skill-percent {
    position: relative;
    margin-left: 10px;
    width: 60px;
    padding-left: 10px;
    padding-right: 20px;
    
    &::after {
        position: absolute;
        content: '%';
        right: 10%;
        bottom: 0;
        font-family: 'Open Sans', sans-serif;
        font-weight: 400;
        font-size: 16px;
        color: #8a909b;
    }
    &-item {
        width: 100%;
        position: relative;
        font-family: 'Open Sans', sans-serif;
        font-weight: 400;
        font-size: 16px;
        color: #414c63;
        outline: transparent;
        &::-webkit-input-placeholder {
            color: #9ea4af;
        }
        &::-moz-placeholder {
            color: #9ea4af;
        }  
    }
}

.add-new-percent {
    &::before {
        position: absolute;
        content: "";
        top: 120%;
        left: 0;
        transform: translateY(-50%);
        border-bottom: 1px solid #000;
        width: 100%;
    }
}

.add-btn-skill {
    margin-left: 30px;
}

.edit-skills {
    padding-top: 30px;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    padding-left: 10px;
    padding-right: 10px;
    padding-bottom: 70px;
}

.edit-skill-name-item {
    width: 65%;
}

.skill-item {
    display: flex;
    justify-content: space-between;
    margin-bottom: 30px;
    font-family: 'Open Sans', sans-serif;
    font-weight: 400;
    font-size: 16px;
    color: #414c63;
    &:last-child {
        margin-bottom: 0;
    }
}

.edit-skill-percent {
    margin-left: auto;
}

.edit-group-btns {
    margin-left: 15%;
}

.btn-edit {
    width: 15px;
    height: 15px;
    background: svg-load('pencil.svg', fill=#a0a5b1, width=15px, height=15px) center center no-repeat;
}

.btn-remove {
    margin-left: 20px;
    width: 15px;
    height: 15px;
    background: svg-load('trash.svg', fill=#a0a5b1, width=15px, height=15px) center center no-repeat;
}